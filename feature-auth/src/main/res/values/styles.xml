<resources>

    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Цвета -->
        <item name="colorPrimary">@color/auth_text_grey</item>
        <item name="colorPrimaryVariant">@color/auth_green</item>
        <item name="colorOnPrimary">@color/auth_white</item>
        <item name="colorSecondary">@color/auth_green</item>
        <item name="colorOnSecondary">@color/auth_white</item>
        <item name="android:colorBackground">@color/auth_bg</item>
        <item name="android:textColorPrimary">@color/auth_white</item>
        <item name="android:textColorSecondary">@color/auth_text_grey</item>

        <!-- Шрифт по умолчанию -->
        <item name="android:fontFamily">@font/roboto</item>

        <!-- Кнопки MaterialButton -->
        <item name="materialButtonStyle">@style/Widget.MyApp.Button</item>
    </style>

    <!-- Кнопка по умолчанию -->
    <style name="Widget.MyApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">18sp</item>
        <item name="android:letterSpacing">0.0093</item>
        <item name="android:textColor">@color/auth_white</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

   </resources>
