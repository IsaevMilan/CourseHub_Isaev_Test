<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#20000000">

    <item>
        <layer-list>

            <!-- Фон -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/btn_login_start"/>
                    <corners android:radius="12dp"/>
                </shape>
            </item>

            <!-- Пунктирная рамка -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="12dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="#80FFFFFF"
                        android:dashWidth="8dp"
                        android:dashGap="6dp"/>
                </shape>
            </item>

            <!-- Иконка по центру -->
            <item
                android:drawable="@drawable/ic_placeholder"
                android:gravity="center"/>
        </layer-list>
    </item>

</ripple>

